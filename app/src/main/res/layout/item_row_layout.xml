<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/demo_dimen_80dp">

	<ImageView
		android:id="@+id/displayImage"
		android:layout_width="@dimen/demo_dimen_80dp"
		android:layout_height="@dimen/demo_dimen_0dp"
		android:padding="@dimen/demo_dimen_4dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tvBottle"
		style="@style/TextAppearance.AppCompat.Large"
		android:layout_width="@dimen/demo_dimen_0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/demo_dimen_8dp"
		android:layout_marginTop="@dimen/demo_dimen_4dp"
		android:textSize="@dimen/demo_text_16sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/displayImage"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tvDetail"
		android:layout_width="@dimen/demo_dimen_0dp"
		android:layout_height="wrap_content"
		android:textSize="@dimen/demo_text_14sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@+id/tvBottle"
		app:layout_constraintTop_toBottomOf="@+id/tvBottle" />
</androidx.constraintlayout.widget.ConstraintLayout>
